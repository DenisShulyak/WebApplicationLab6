@model IEnumerable<WebApplicationLab6.Objects.Claim>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<form asp-action="Index" method="get">
    <div>
        <input type="hidden" name="downloadData" value="true" />
        <button type="submit">Download</button>
    </div>
</form>

<!-- Форма поиска -->
<form asp-action="Index" method="get">
    <div>
        <label for="searchField">Search Field:</label>
        <select name="searchField">
            <option value="City">City Name</option>
            <option value="Description">Description</option>
        </select>
    </div>
    <div>
        <label for="searchTerm">Search Term:</label>
        <input type="text" name="searchTerm">
    </div>
    <div>
        <label for="sortField">Sort Field:</label>
        <select name="sortField">
            <option value="FilingDate">Filing Date</option>
            <option value="CategoryCustomer">Category Customer</option>
            <option value="District">District</option>
            <option value="Description">Description</option>
            <option value="IsSpeed">Is Speed</option>
            <option value="City">City</option>
        </select>
    </div>
    <div>
        <label for="sortOrder">Sort Order:</label>
        <select name="sortOrder">
            <option value="Ascending">Ascending</option>
            <option value="Descending">Descending</option>
        </select>
    </div>
    <div>
        <button type="submit">Search</button>
    </div>
</form>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FilingDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CategoryCustomer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.District)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsSpeed)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsDone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FilingDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CategoryCustomer)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.District)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsSpeed)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsDone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City.Name)
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
